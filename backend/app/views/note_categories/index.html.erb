<div class="row">
  <%= link_to "添加", new_note_category_path, class: "btn btn-info" %>
  <hr>
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr class="active">
        <th>Id</th>
        <th>分类名</th>
        <th>创建时间</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @note_categories.each do |note_category|%>
        <tr>
          <td><%= note_category.id%></td>
          <td><%= note_category.name%></td>
          <td><%= note_category.created_at.strftime('%Y-%-m-%-d %H:%M:%S')%></td>
          <td><%= link_to "修改", edit_note_category_path(note_category), class: "btn btn-warning" %>
            <%= link_to "删除", "/note_categories/delete?id=#{note_category.id}" , class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>