<div class="row">
  <div class="col-md-9 well form-horizontal col-md-offset-1">
    <%= form_for(@category,:html => {:role=>'form'}) do |f| %>
      <h3>添加导航分类</h3>

      <div class="form-group">
        <label class="control-label">分类标题</label>
        <%= f.text_field :title, class:"form-control",:placeholder => "输入分类标题"%>
      </div>

      <div class="form-group">
        <label class="control-label">分类名字</label>
        <%= f.text_field :name, class:"form-control",:placeholder => "输入分类名字"%>
      </div>

      <%= f.submit '保存',class: "btn btn-success"%>
    <% end %>
  </div>
</div>