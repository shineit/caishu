<div align='center'>
  <h1>欢迎使用后台管理系统</h1>
  Now is <%= Time.now %>
  <hr>
  <%= link_to '添加导航分类',new_category_path,class: "btn btn-primary btn-lg btn-block"%>

  <hr>
    <table class="table table-striped table-bordered table-hover table-condensed">
      <thead>
        <tr class="active">
          <th>ID</th>
          <th>标题</th>
          <th>名字</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category|%>
          <tr>
            <td><%= category.id%></td>
            <td><%= category.title%></td>
            <td><%= category.name%></td>
            <td><%= link_to "修改", edit_category_path(category), class: "btn btn-warning" %>
              <%= link_to "删除", "/categories/delete?id=#{category.id}" , class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

</div>