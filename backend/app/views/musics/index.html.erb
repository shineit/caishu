<div class="row-fluid">
  <div class="span10">
    <h3>Music</h3>
  </div>

  <div class="span10 well form-inline">
    <div class="control-group">
        <%= link_to "新增", new_music_path, class: "btn btn-primary" %>
    </div>
  </div>
  
  <div class="span10">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>名称</th>
          <th>描述</th>
          <th>URL</th>
          <th>操作</th>
        </tr>
      </thead>

      <tbody>
        <% @musics.each do |music| %>
          <tr>
            <td><%= music.name %></td>
            <td><%= music.description %></td>
            <td><%= music.music_url %></td>
            <td><%= link_to "删除", "/musics/delete?id=#{music.id}", class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>