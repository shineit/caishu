<div class="row">
	<div class="col-md-9 well form-horizontal col-md-offset-1">
		<%=render 'message_info' %>
		<%= form_for @photo do |f| %>
			<div class="form-group has-warning">
				<label class="control-label" >名称</label>
				<%= f.text_field :name, class: "form-control"%>
			</div>

			<div class="form-group has-warning">
				<label class="control-label">分类</label>
				<div class="controls">
					<%= f.select(:photo_category_id, options_for_select(@photo_categories))%>
				</div>
			</div>

			<div class="form-group has-warning">
				<label class="control-label">图片</label>
				<div class="controls">
					<%= f.file_field :file %>
				</div>
			</div>
			<br>

			<div class="form-group">
				<%=f.submit '保存',class: "btn btn-primary"%>
				<%=link_to '返回',"/photos",class: "btn btn-primary"%>
			</div>
		<% end %>
	</div>
</div>
<script type="text/javascript">
  $("#photo_photo_category_id").addClass("form-control input-lg");
  $("#photo_file").addClass("form-control");
</script>