<div class="row">
  <div class="col-md-12">
    <h3>修改美文</h3>
  </div>
  <hr>
<%= form_for(@essay,:html => {:role=>'form'}) do |f| %>
  <div class="form-group">
    <label>标题</label>
    <%= f.text_field :title, class:"form-control",:placeholder => "输入标题"%>
  </div>
  <div class="form-group">
    <label>作者</label>
    <%= f.text_field :author, class:"form-control",:placeholder => "输入作者姓名"%>
  </div>
  

  <div class="form-group">
    <%= javascript_include_tag "ckeditor/ckeditor.js" %>  
    <%= f.cktext_area("content",:width => '100%') %>  
  </div>

  <%= f.submit '保存心情',class: "btn btn-success"%>
<% end %>