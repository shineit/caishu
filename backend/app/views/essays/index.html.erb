<div class="row">
  <%= link_to "添加", new_essay_path, class: "btn btn-info" %>
  <hr>
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr class="active">
        <th>ID</th>
        <th>标题</th>
        <th>作者</th>
        <th>内容</th>
        <th>创建时间</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @essays.each do |essay|%>
        <tr>
          <td><%= essay.id%></td>
          <td><%= essay.title%></td>
          <td><%= essay.author%></td>
          <td><%= cut_content(essay.content)%></td>
          <td><%= essay.created_at.strftime('%Y-%-m-%-d %H:%M:%S')%></td>
          <td><%= link_to "修改", edit_essay_path(essay), class: "btn btn-warning" %>
            <%= link_to "删除", "/essays/delete?id=#{essay.id}" , class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>