<div class="row">
  <%= link_to "添加", new_mood_path, class: "btn btn-info" %>
  <hr>
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr class="active">
        <th>标题</th>
        <th>内容</th>
        <th>创建时间</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @moods.each do |mood|%>
        <tr>
          <td><%= mood.title%></td>
          <td><%= cut_content(mood.content)%></td>
          <td><%= mood.created_at.strftime('%Y-%-m-%-d %H:%M:%S')%></td>
          <td><%= link_to "修改", edit_mood_path(mood), class: "btn btn-warning" %>
            <%= link_to "删除", "/moods/delete?id=#{mood.id}" , class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>