<div class="row">
  <%= link_to "添加", new_goodfriend_path, class: "btn btn-info" %>
  <hr>
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr class="active">
        <th>qq号码</th>
        <th>qq昵称</th>
        <th>微信号码</th>
        <th>微信昵称</th>
        <th>性别</th>
        <th>年龄</th>
        <th>真实姓名</th>
        <th>照片</th>
        <th>电话</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @goodfriends.each do |goodfriend|%>
        <tr>
          <td><%= goodfriend.qq%></td>
          <td><%= goodfriend.qq_name%></td>
          <td><%= goodfriend.weixin%></td>
          <td><%= goodfriend.weixin_name%></td>
          <td><%= gender_analyse(goodfriend.gender)%></td>
          <td><%= goodfriend.age%></td>
          <td><%= goodfriend.truth_name%></td>
          <td><img src="<%= goodfriend.photo%>" /></td>
          <td><%= goodfriend.telephone%></td>
          <td><%= link_to "修改", edit_goodfriend_path(goodfriend), class: "btn btn-warning" %>
            <%= link_to "删除", "/goodfriends/delete?id=#{goodfriend.id}" , class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>