<div class="row">
  <div class="col-md-12">
    <h3>修改朋友信息</h3>
  </div>
  <hr>
<%= form_for(@goodfriend,:html => {:role=>'form'}) do |f| %>
  <div class="form-group">
    <label class="control-label">QQ号码</label>
      <%= f.text_field :qq, class:"form-control",:placeholder => "输入标题"%>
    </div>

    <div class="form-group">
      <label class="control-label">QQ昵称</label>
      <%= f.text_field :qq_name, class:'form-control',:placeholder => "内容"%>
    </div>

    <div class="form-group">
      <label class="control-label">微信号码</label>
      <%= f.text_field :weixin, class:'form-control',:placeholder => "内容"%>
    </div>

    <div class="form-group">
      <label class="control-label">微信昵称</label>
      <%= f.text_field :weixin_name, class:'form-control',:placeholder => "内容"%>
    </div>

    <div class="form-group">
      <label class="control-label">性别</label>
      <%= f.select :gender, options_for_select([['男', 1], ['女', 2]])%>
    </div>

    <div class="form-group">
      <label class="control-label">年龄</label>
      <%= f.text_field :age, class:'form-control',:placeholder => "内容"%>
    </div>

    <div class="form-group">
      <label class="control-label">真实姓名</label>
      <%= f.text_field :truth_name, class:'form-control',:placeholder => "内容"%>
    </div>

    <div class="form-group">
      <label class="control-label">上传图片</label>
      <%= f.file_field :file, class: "input-file" %>
    </div>

    <div class="form-group">
      <label class="control-label">电话号码</label>
      <%= f.text_field :telephone, class:'form-control',:placeholder => "内容"%>
    </div>
    <%= f.submit '保存信息',class: "btn btn-success"%>
<% end %>