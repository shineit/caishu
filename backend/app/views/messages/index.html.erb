还有<%= @number%>条未设置的信息。
<hr>
<div class="row-fluid">
  <div class="span10 offset2">
<% @number.times do |i|%>
	<%= form_for(@message[i],:remote => true)  do |mess|%>
		<%= mess.text_field :content ,class: "input-medium" %>
		<%= mess.text_field :response %>
		<%= mess.submit '保存' , class: "btn btn-primary"%>
		<%= link_to '删除',@message[i], method: :delete,:remote => true , class: "btn btn-primary"%>
	<%end%>
<% end %>
  </div>
</div>