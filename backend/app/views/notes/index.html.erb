<div class="row">
  <%= link_to "添加", new_note_path, class: "btn btn-info" %>
  <hr>
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr class="active">
        <th>标题</th>
        <th>类别</th>
        <th>创建时间</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @notes.each do |note|%>
        <tr>
          <td><%= note.title%></td>
          <td><%= note.note_category_id%></td>
          <td><%= note.created_at.strftime('%Y-%-m-%-d %H:%M:%S')%></td>
          <td><%= link_to "修改", edit_note_path(note), class: "btn btn-warning" %>
            <%= link_to "删除", "/notes/delete?id=#{note.id}" , class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>