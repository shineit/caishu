<div class="row">
  <div class="col-md-12">
    <h3>修改笔记</h3>
  </div>
  <hr>
<%= form_for(@note,:html => {:role=>'form'}) do |f| %>
  <div class="form-group">
    <label>标题</label>
    <%= f.text_field :title, class:"form-control",:placeholder => "输入标题"%>
  </div>

  <div class="form-group">
    <label class="control-label">分类</label>
    <div class="controls">
      <%= f.select(:note_category_id, options_for_select(@note_categories))%>
    </div>
  </div>
  
  <div class="form-group">
    <%= javascript_include_tag "ckeditor/ckeditor.js" %>  
    <%= f.cktext_area("content",:width => '100%') %>  
  </div>

  <div class="form-group">
    <%= f.label '上传图片' %><br />
    <%= f.file_field :file, class: "input-file" %>
  </div>

  <%= f.submit '保存笔记',class: "btn btn-success"%>

  <script type="text/javascript">   
    $("#note_note_category_id option[value='"+<%= @note.note_category_id%>+"']").attr("selected",true)
    $("#note_note_category_id").addClass("form-control");
  </script>
<% end %>