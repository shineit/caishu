<div class="page">
	<div class="header">
		<p class="title">
			<% if @photo_category_id == "all"%>
				大家都爱看的
			<% else %>
				<%= PhotoCategory.find(@photo_category_id).name%>
			<% end %>
			<i class="arrow"></i></p>
		<div class="popover">
			<div class="title"><span class="sortIcon">分类</span></div>
			<ul class="list">
				<% @photo_categories.each do |photo_category| %>
					<li><a href="/?photo_category_id=<%=photo_category.id%>"><%=photo_category.name%></a></li>
				<% end %>
			</ul>
		</div>
	</div>
	<div class="container" maxpage="<%=@maxpage%>" currentpage="<%=@currentpage%>" photocategoryid="<%=@photo_category_id%>">
		<% @photos.each do |photo|%>
			<div class="listphoto">
				<a href="/photos/<%=photo.id%>">
					<img src="<%= picture_url(photo.alias_name,"web",photo.photo_category_id.to_s) %>" alt="" width="260px">
				</a>
			</div>
		<% end %>
		
	</div>
	<a class="get-more">
			获取更多...
		</a>
  <div class="footer">
		<a href="http://www.baidu.com">Menghuan 京ICP证030173号</a>
	</div>	
</div>
