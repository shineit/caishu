<div class="container">
  <ol class="breadcrumb">
    <li><a href="/essays">美文</a></li>
  </ol>
  <div class="jumbotron">
    <h2><center><%= @essay.title%></center></h2>
    <% if !@essay.author.nil?%>
    <h4><center><%= @essay.author%></center></h4>
    <% end %>
    <br>
    <p><%= @essay.content%></p>
  </div>
</div>
<script type="text/javascript">
  $("#essays").addClass("active");
  $(".breadcrumb").append("<li class='active'><%=@essay.title%></li>");
</script>